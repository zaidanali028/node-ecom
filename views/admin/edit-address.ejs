<!DOCTYPE html>
<html lang="en">
<%-include('../layouts/admin/head')%>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
<div class="wrapper">
  <!-- Navbar -->
 <%-include('../layouts/admin/main-nav.ejs')%>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <%-include('../layouts/admin/sidenav')%>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Edit Working Address Information</h1>
            <%-include("../layouts/flashes.ejs")%>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin">Home</a></li>
              <li class="breadcrumb-item active">edit-address</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-secondary">
            <div class="card-header">
              <h3 class="card-title">Edit Address Info Details</h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
              <div class="form-group">
          <form action="/admin/edit-address" method="POST" enctype="multipart/form-data" id="myForm">

                <label for="inputName">Work E-mail</label>
                <input type="email" id="inputName" name="email" class="form-control"  
                value="<%= typeof email != 'undefined' ? email : ad.email %>"
                
                >
               
               <label for="inputName">Work Phone Number</label>
              <input type="number" id="inputName" name="phoneNumber" class="form-control"
              value="<%= typeof phoneNumber != 'undefined' ? phoneNumber : ad.phoneNumber %>"
              
              >
             

              <label for="inputName">Physical Work Region</label>
              <input type="text" id="inputName" name="region" class="form-control"
              value="<%= typeof region != 'undefined' ? region : ad.region %>" placeholder="Kumasi"
              
              >
              <label for="inputName">Physical Work City</label>
              <input type="text" id="inputName" name="city" class="form-control"
              value="<%= typeof city != 'undefined' ? city : ad.city %>" placeholder="Adum-Pampaso"
              
              >
              <label for="inputName">Physical Work Address</label>
              <input type="address" id="inputName" name="address" class="form-control"
              value="<%= typeof address != 'undefined' ? address : ad.address %>" placeholder="203 Fake St. Mountain View, San Francisco, California, US"
              
              >
          <input type="submit"  id="disableMe" value="Submit" class="btn btn-success float-right"
         

          >
        </form>
        <form class="mt-2" action="/admin/delete-address/<%=ad._id%>?_method=DELETE" method="POST" id="myForm">
            <button  id="disableMe" type="submit" class="btn btn-danger float-left" onclick="return confirm('Are you sure you want to delete this address?')">Delete Address</button>
            </form>

              
              
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        
        </div>
  




      </div>
      <div class="row">
        <div class="col-12">
          <a href="/admin/" class="btn btn-secondary">Cancel</a>
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->

  <!-- Main Footer -->
 <%-include('../layouts/admin/main-footer')%>
</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->
<%-include('../layouts/admin/scripts')%>
