<!DOCTYPE html>
<html lang="en">
  <%-include('../layouts/admin/head')%>
  <body
    class="
      hold-transition
      sidebar-mini
      layout-fixed layout-navbar-fixed layout-footer-fixed
    "
  >
  <style>
    table{
   display: block !important;
   overflow-x: auto !important;
   width: 100% !important;
 }
  </style>
    <div class="wrapper">
      <!-- Navbar -->
      <%-include('../layouts/admin/main-nav.ejs')%>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <%-include('../layouts/admin/sidenav')%>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="m-0">Dashboard v2</h1>
                <%-include('../layouts/flashes.ejs')%>
              </div>
              <!-- /.col -->
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                  <li class="breadcrumb-item active">index</li>
                </ol>
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <!-- Info boxes -->
            <div class="row">
              <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                  <span class="info-box-icon bg-info elevation-1"
                    ><i class="fas fa-user"></i
                  ></span>

                  <div class="info-box-content">
                    <span class="info-box-text">All Users</span>
                    <span class="info-box-number">
                      <%=allUsers%>
                      <small></small>
                    </span>
                  </div>
                  <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
              </div>
              <!-- /.col -->
              <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                  <span class="info-box-icon bg-danger elevation-1"
                    ><i class="fas fa-thumbs-up"></i
                  ></span>

                  <div class="info-box-content">
                    <span class="info-box-text">Favourites</span>
                    <span class="info-box-number"><%=allFavs%></span>
                  </div>
                  <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
              </div>
              <!-- /.col -->

              <!-- fix for small devices only -->
              <div class="clearfix hidden-md-up"></div>

              <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                  <span class="info-box-icon bg-success elevation-1"
                    ><i class="fas fa-shopping-cart"></i
                  ></span>

                  <div class="info-box-content">
                    <span class="info-box-text">Sales</span>
                    <span class="info-box-number">GH₵ <%=totalSales%></span>
                  </div>
                  <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
              </div>
              <!-- /.col -->
              <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                  <span class="info-box-icon bg-warning elevation-1"
                    ><i class="fas fa-users"></i
                  ></span>

                  <div class="info-box-content">
                    <span class="info-box-text">New Members This Month</span>
                    <span class="info-box-number"><%=monthlyUsers%></span>
                  </div>
                  <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->

            <!-- Main row -->
            <div class="row">
              <!-- Left col -->
              <div class="col-md-8">
                <!-- MAP & BOX PANE -->

                <!-- TABLE: LATEST ORDERS -->
                <%if(orders){%>
                <div class="card">
                  <div class="card-header border-transparent">
                    <h3 class="card-title">Latest Orders</h3>

                    <div class="card-tools">
                      <button
                        type="button"
                        class="btn btn-tool"
                        data-card-widget="collapse"
                      >
                        <i class="fas fa-minus"></i>
                      </button>
                      <button
                        type="button"
                        class="btn btn-tool"
                        data-card-widget="remove"
                      >
                        <i class="fas fa-times"></i>
                      </button>
                    </div>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body p-0">
                    <div class="table-responsive">
                      <table class="table m-0" id="tble">
                        <thead>
                          <tr>
                            <th>Order ID</th>
                            <th>User</th>
                            <th>Status</th>
                            <th>Date</th>
                          </tr>
                        </thead>
                        <tbody>
                          <%for(order of orders){%>
                          <tr>
                            <td>
                              <a href="/admin/order-info/<%=order._id%>"
                                ><%=order._id%></a
                              >
                            </td>
                            <td><%=order.user.name%></td>
                            <td>
                              <% if(order.Delivered==true){%>
                              <span class="badge badge-success">Delivered</span>
                              <% }else{%>
                              <span class="badge badge-warning"
                                >Yet To Get Delivered</span
                              >

                              <%}%>
                            </td>
                            <td>
                              <div
                                class="sparkbar"
                                data-color="#00a65a"
                                data-height="20"
                              >
                                <%=new Date(order.createdAt).toDateString()%>
                              </div>
                            </td>
                          </tr>
                          <%}%>
                        </tbody>
                      </table>
                    </div>
                    <!-- /.table-responsive -->
                  </div>
                  <!-- /.card-body -->
                  <div class="card-footer clearfix">
                    <a
                      href="/admin/orders"
                      class="btn btn-sm btn-secondary float-right"
                      >View All Orders</a
                    >
                  </div>

                  <!-- /.card-footer -->
                </div>
                <%}%>
                <!-- here -->
                <%if(productStock){%>
                <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">Current Products Stocks Left</h3>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body p-7">
                    <table class="table table-sm" id="tble">
                      <thead>
                        <tr>
                          <th style="width: 10%">#</th>
                          <th stlyle="width: 18%">Product</th>
                          <th style="width: 18%">Stocks Left</th>
                          <th style="width: 18%">
                            Percentage Of Total Stock Left
                          </th>
                          <th style="width: 18%">Count In Stock</th>
                          <th style="width: 18%">Original Count In Stock</th>

                        </tr>
                      </thead>
                      <tbody>
                        <%let counter=0;%> <%for(product of productStock){%>
                        <%counter+=1;%>

                        <tr>
                          <td><%=counter%></td>
                          <td><a href="/admin/product/<%=product._id%>">   <%=product.name%> </a></td>
                          <td>
                            <% let
                            pctLeft=product.countInStock/product.originalCountInStock*100
                            %> <%pctLeft=Math.floor(pctLeft)%> 
                                      
                            <%if((pctLeft=>0) &&  (pctLeft<=20)){%>
                                        <div class="progress progress-xs">

                              <div
                                class="progress-bar bg-danger"
                                style="width: <%=pctLeft%>%"
                              ></div>
                            </div>
          <%}else if((pctLeft=>21) &&  (pctLeft<=40)){%>
            <div class="progress progress-xs">

  <div
    class="progress-bar bg-warning"
    style="width: <%=pctLeft%>%"
  ></div>
</div>
<%}else if((pctLeft=>41) &&  (pctLeft<=70)){%>
  <div class="progress progress-xs">

<div
class="progress-bar bg-info"
style="width: <%=pctLeft%>%"
></div>
</div>
<%}else{%>
  <div class="progress progress-xs">

    <div
    class="progress-bar bg-success"
    style="width: <%=pctLeft%>%"
    ></div>
    </div>
<%}%>




                            
                          </td>

                          <td>
                            <%if((pctLeft=>0) && (pctLeft<=20)){%>
                            <span class="badge bg-danger"><%=pctLeft%>%</span>
                            <%}else if((pctLeft=>21) && (pctLeft<=40)) {%>
                            <span class="badge bg-warning"><%=pctLeft%>%</span>
                            <%}else if((pctLeft=>41) && (pctLeft<=70)) {%>
                            <span class="badge bg-info"><%=pctLeft%>%</span>
                            <%}else{%>
                            <span class="badge bg-success"><%=pctLeft%>%</span>

                            <%}%>
                          </td>
                          <td><%=product.countInStock%></td>
                        <td>  <%=product.originalCountInStock%></td>

                        </tr>
                        <%}%>
                      </tbody>
                    </table>
                  </div>
                  <div class="card-footer clearfix">
                    <a href="/admin/stocks" class="btn btn-sm btn-outline-secondary float-right">View All Products Stocks</a>
                  </div>
                  <!-- /.card-body -->
                </div>
                <%}%>

                <!-- /.card -->
              </div>
              <!-- /.col -->

              <div class="col-md-4">
                <!-- Info Boxes Style 2 -->
                <div class="info-box mb-3 bg-warning">
                  <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                  <div class="info-box-content">
                    <span class="info-box-text">Inventory</span>
                    <span class="info-box-number"><%=orderCount%></span>
                  </div>
                  <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
                <div class="info-box mb-3 bg-success">
                  <span class="info-box-icon"
                    ><i class="fas fa-shopping-bag"></i
                  ></span>

                  <div class="info-box-content">
                    <span class="info-box-text">Products</span>
                    <span class="info-box-number"><%=pcount%></span>
                  </div>
                  <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
                <div class="info-box mb-3 bg-danger">
                  <span class="info-box-icon"
                    ><i class="fas fa-gifts"></i
                  ></span>

                  <div class="info-box-content">
                    <span class="info-box-text">Coupons</span>
                    <span class="info-box-number"><%=cCount%></span>
                  </div>
                  <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->

                <!-- /.card -->

                <!-- PRODUCT LIST -->
                <%if(prdctNew){%>
                <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">Recently Added Products</h3>

                    <div class="card-tools">
                      <button
                        type="button"
                        class="btn btn-tool"
                        data-card-widget="collapse"
                      >
                        <i class="fas fa-minus"></i>
                      </button>
                      <button
                        type="button"
                        class="btn btn-tool"
                        data-card-widget="remove"
                      >
                        <i class="fas fa-times"></i>
                      </button>
                    </div>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body p-0">
                    <ul class="products-list product-list-in-card pl-2 pr-2">
                      <%for (product of prdctNew){%>
                      <li class="item">
                        <div class="product-img">
                          <img
                            src="<%=product.image[0]%>"
                            alt="Product Image"
                            class="img-size-50"
                          />
                        </div>
                        <div class="product-info">
                          <a href="/admin/product/<%=product._id%>" class="product-title"
                            ><%=product.name%>
                            <span class="badge badge-warning float-right"
                              >₵<%=product.price%></span
                            ></a
                          >
                          <span class="product-description">
                            <%=product.description%>
                          </span>
                        </div>
                      </li>
                      <%}%>
                      <!-- /.item -->

                      <!-- /.item -->
                    </ul>
                  </div>
                  <!-- /.card-body -->
                  <div class="card-footer text-center">
                    <a href="/admin/products/all" class="uppercase"
                      >View All Products</a
                    >
                  </div>
                  <!-- /.card-footer -->
                </div>
                <%}%>
                <!-- /.card -->
                <!-- calendar -->
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!--/. container-fluid -->
        </section>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->

      <!-- Control Sidebar -->
      <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
      </aside>
      <!-- /.control-sidebar -->

      <!-- Main Footer -->
      <%-include('../layouts/admin/main-footer')%>
    </div>
    <!-- ./wrapper -->

    <!-- REQUIRED SCRIPTS -->
    <%-include('../layouts/admin/scripts')%>
    <script src="/js/toastr.js"></script>
    // Success messages
    <script>
      <%   if(success_msg != ""){ %>
          toastr.success('<%= success_msg %>')

            <% } %>


      // Error messages
            <%  if(error_msg != ""){ %>
          toastr.error('<%= error_msg %>')

            <% } %>



            //Disable button the login button when submitting the form

          const loginForm = document.querySelector("#myForm");
          const disableButton = document.querySelector("#disableMe");

          loginForm.onsubmit = function(){

             disableButton.disabled = true
             disableButton.innerText = "processing,please Wait...."

          }
    </script>
    <!-- DataTables  & Plugins -->
    <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="/plugins/jszip/jszip.min.js"></script>
    <script src="/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>

    <!-- Disable Buttons on Submit -->
  </body>
</html>
