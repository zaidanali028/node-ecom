  <body>
    <%-include('../layouts/home/telegram.ejs')%>

    <%-include('../layouts/home/preloader.ejs')%>
    <%-include('../layouts/home/back_to_top.ejs')%>

  
  <div class="site-wrap">
    <%-include('../layouts/home/fav_header.ejs')%>
    <div class="bg-light py-3">
        <div class="container">
          <div class="row">
            <div class="col-md-12 mb-0"><a href="/">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Favourite</strong></div>
          </div>
        </div>
      </div>
      <div class="site-section">
        <div class="container">
  
          <div class="row mb-5">
            <%if(userFav> 0){%>
            <div class="col-md-9 order-2">
  
              <div class="row">
                <div class="col-md-12 mb-5">
                    <div class="float-md-left mb-4"><h2 class="text-black h5">Favourites</h2></div>

                 
                </div>
              </div>
             
            
              <div class="row mb-5">
                  
                  <div class="site-blocks-table">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th class="product-thumbnail">Image</th>
                    <th class="product-name ">Product</th>
                    <th class="product-price">Price</th>
            
                 
                    <th class="product-remove">Remove</th>
                  </tr>
                </thead>
                <tbody>
                 <%products.fav.slice().reverse().forEach(product=>{%>
                   
              
                
                  <tr>
                    <td class="product-thumbnail">
                      <img src="<%=product.image[0]%>" alt="Image" class="img-fluid">
                    </td>
                    <td class="product-name">
                      <h2 class="h5 text-black text-capitalize"><%=product.name%></h2>
                    </td>
                    <td> GH₵ <%=product.price%></td>
                    
                 
                <td>                      <form action="/remove-wishlist-product/<%=product._id%>?_method=DELETE"  id="myForm" method="POST">
                    <div class="mx-3 mt-3 mb-2"><button type="submit"  id="disableMe" class="btn btn-primary btn-sm"  onclick="return confirm('Are You Sure You Want To Remove This From Your Favourites?')">X</a></div> 
                  </form>
                  </td>

                  </tr>
  <%})%>
                  
                </tbody>
              </table>
              <div class="  d-sm-block">
                         <form action="/fav-to-cart"  id="myForm" method="POST">

                 
              <button class="btn  btn-primary" type="submit">Add All To Cart</button>

                    
                  </form>
             

              </div>
            </div>
            

              </div>
                   <div class="col-md- pl-3">
              <div class="row justify-content-end">
                <div class="col-md-7">
                  <div class="row">
                    <div class="col-md-12 text-right border-bottom mb-5">
                      <h3 class="text-black h4 text-uppercase">Cart Totals</h3>
                    </div>
                  </div>
                  <div class="row mb-3">
                    <div class="col-md-6">
                      <span class="text-black">Subtotal</span>
                    </div>
                    <div class="col-md-6 text-right">
                      <strong class="text-black">GH₵ <%=totalOfFav%> </strong>
                    </div>
                  </div>
                  <div class="row mb-5">
                    <div class="col-md-6">
                      <span class="text-black">Total</span>
                    </div>
                    <div class="col-md-6 text-right">
                      <strong class="text-black">GH₵ <%=totalOfFav%> </strong>
                    </div>
                  </div>
  
                  <div class="row">
                    <div class="col-md-12">
                         <div class="  d-sm-block">
                         <form action="/fav-to-cart"  id="myForm" method="POST">

                 
              <button class="btn  btn-primary" type="submit">Move All To Cart</button>

                    
                  </form>
             

              </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
              <div class="row aos-init aos-animate" data-aos="fade-up">
                <!-- <%-include('../layouts/home/paginate-fav')%> -->
              </div>
            </div>
          <%}else{%>
            <div class="col-md-9 order-2">
  
            
              <div class="row mb-5 ">
                <div class="container" >
                  <%if(!LoggedIn){%>
                    <div class="card mb-3 " >
                      <div class="row g-0 p-xl-5 " >
                        <div class="col-md-4">
                          <img src="/svgs/fav.svg" alt="..." class="img-fluid">
                        </div>
                        <div class="col-md-8" style="display:flex;flex-direction:row;align-items:center">
                          <div class="card-body" ">
                            <div class="">
                            <h5 class="card-title"><a href="/users/login">Login</a> To Select The Finest Items You Want   </h5>
                          </div>
                          <div class="">
                            <p class="card-text">
                              Your wishlist is currently empty :(, add at least one item or more to your wishlist after you login 
                            </p>
                          </div>
      
                            
                          </div>
                        </div>
                      </div>
                    </div>
               <% }else{%>
                <div class="card mb-3 " >
                  <div class="row g-0 p-xl-5 " >
                    <div class="col-md-4">
                      <img src="/svgs/fav.svg" alt="..." class="img-fluid">
                    </div>
                    <div class="col-md-8" style="display:flex;flex-direction:row;align-items:center">
                      <div class="card-body" ">
                        <div class="">
                        <h5 class="card-title"><a href="/shop">Visit Shop</a> to add items to your wishlist </h5>
                      </div>
                      <div class="">
                        <p class="card-text">
                          Your wishlist is currently empty :(, add at least one item or more to your wishlist 
                        </p>
                      </div>
  
                        
                      </div>
                    </div>
                  </div>
                </div>
  
               <%}%>

                </div>

              </div>
              <div class="row aos-init aos-animate" data-aos="fade-up">
                
<div class="col-md-12 text-center">
  <div class="site-block-27">
      

  </div>
</div>



              </div>
            </div>
          <%}%>
            
         
  
            <div class="col-md-3 order-1 mb-5 mb-md-0">
              <div class="border p-4 rounded mb-4">
                <h3 class="mb-3 h6 text-uppercase text-black d-block">Categories</h3>
                <ul class="list-unstyled mb-0">
                    
                    <%let index=-1%>

                    <%categories.forEach(category=>{%>
                        <%index+=1%>
                        
                        
                        <li class="mb-1"><a href="/shop/<%=category.slug%>" class="d-flex"><span class="text-uppercase"><%=category.name%></span> <span class="text-black ml-auto"><%=catCountArr[index]%></span></a></li>
                        <%})%>



                 
                </ul>
              </div>
  
              
            </div>
          </div>
  
          <div class="row">
            <div class="col-md-12">
             <div class="site-section site-blocks-2">
      <div class="container">
        <div class="row">
          
        <%categories.forEach(category=>{%>
          <div class="col-sm-6 col-md-6 col-lg-4 mb-5 mb-lg-0" data-aos="fade" data-aos-delay="200">
            <a class="block-2-item" href="/shop/<%=category.slug%>/">
              <figure class="image">
                <img src="<%=category.catCover%>"  width="900" height="1182" alt="" class="img-fluid cd- mt-4">
              </figure>
              <div class="text">
                <span class="text-uppercase">COLLECTIONS</span>
                <h3 class="text-uppercase"><%=category.name%></h3>
              </div>
            </a>
          </div>
        <%})%>
          
        </div>
      </div>
    </div>

            </div>
          </div>
          
        </div>
